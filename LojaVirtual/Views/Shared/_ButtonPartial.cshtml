@model int
@*
    Botões de ações das tabelas da aplicação
*@

<td style="width: 150px;">
    <div class="btn-group">
        <a asp-action="Edit" asp-controller="Categorias" class="btn btn-primary" asp-route-id="@Model">
            <i class="far fa-edit"></i>
        </a>
        <a asp-action="Details" asp-controller="Categorias" class="btn btn-warning" asp-route-id="@Model">
            <i class="fas fa-list-ul"></i>
        </a>
        <a asp-action="Delete" asp-controller="Categorias" class="btn btn-danger" asp-route-id="@Model">
            <i class="far fa-trash-alt"></i>
        </a>
    </div>
</td>
