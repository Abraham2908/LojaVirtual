@model LojaVirtual.Models.Categorias
@{
    ViewData["Title"] = "Delete";
}
<br />

<h2 class="text-info">Excluir Categoria</h2>
<h4>Tem certeza que deseja excluir esta Categoria?</h4>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id"  />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Categoria"></label>
            </div>
            <div class="col-5">
                <input asp-for="Categoria" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Excluir" />
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






