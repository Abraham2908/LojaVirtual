@model LojaVirtual.Models.Categorias
@{
    ViewData["Title"] = "Details";
}
<br />

<h2 class="text-info">Detalhes da Categoria</h2>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Categoria"></label>
            </div>
            <div class="col-5">
                <input asp-for="Categoria" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Editar</a>
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


