@model LojaVirtual.Models.Produtos

@{
    ViewData["Title"] = "Edit";
}

<br />

<h2 class="text-info">Editar Produto</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nome"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Nome" class="form-control" />
                </div>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Preco"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Preco" class="form-control" />
                </div>
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Imagem"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Imagem" class="form-control" type="file" accept="image/jpg,image/png,image/jpeg" /> @*Accept - tipos de arquivos que serão aceitos para upload.*@
                </div>
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProdutoCor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProdutoCor" class="form-control" />
                </div>
                <span asp-validation-for="ProdutoCor" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoriaId"></label>
                </div>
                <div class="col-8">
                    @*Exibe o nome da categoria no menu pro meio do ViewData/Bag no Controller*@
                    <select asp-for="CategoriaId" asp-items="ViewBag.CategoriaId" class="form-control"></select>
                    @*<input asp-for="ProductTypeId" class="form-control"/>*@
                </div>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TagEspecialId"></label>
                </div>
                <div class="col-8">
                    @*Exibe o nome da tag no menu pro meio do ViewData/Bag no Controller*@
                    <select asp-for="TagEspecialId" asp-items="ViewBag.TagEspecialId" class="form-control"></select>
                    @*<input asp-for="SpecialTagId" class="form-control" />*@
                </div>
                <span asp-validation-for="TagEspecialId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Disponibilidade"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Disponibilidade" class="" type="checkbox" />
                </div>
                <span asp-validation-for="Disponibilidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Editar" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="~/@Model.Imagem" style="width: 100%; height: 250px; border-radius: 5px;border: 1px solid #efefef" />
        </div>

    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
